    "./libspot.js"
  ],
  "main": "./dist/libspot.js",
  "types": "./types/index.d.ts",
  "module": "index.ts",
  "scripts": {
    "build:wasm": "rm -f libspot.js && make -C .. wasm/libspot.js",
    "build:types": "rm -rf ./types && tsc",
    "build:lib": "bun build --minify ./index.ts --outfile dist/libspot.js --target browser --tsconfig-override ./tsconfig.json",
    "build": "bun build:types && bun build:lib"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
